@page "/ChatRoom/{id:int}"
@model ChatBotWeb.Pages.ChatRoomModel
@{
}

<div class="row">
    <div class="col-md-8 offset-2">
        <h2>Chat Room: @Model.Room.RoomName </h2>
        <ul class="list-group">
            @foreach (var message in Model.Messages)
            {
                <li class="list-group-item">
                    <div>
                        By: @message.User.Username:
                    </div>
                    <div>
                        @message.MessagePrompt
                    </div>
                    <div>
                        on @message.PostingTime
                    </div>
                </li>
            }
        </ul>
    </div>
</div>


<div class="row">
    <div class="col-md-8 offset-2">

        <label for="inputMessage" class="form-label">Email address</label>
        <input type="email" class="form-control" id="inputMessage" placeholder="Enter your message here">
        <button type="button" class="btn btn-primary">Send</button>
    </div>
</div>
