@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Chat application.</h1>
</div>

<div class="row'>
    <div class="col-md-8 offset-2">
        <h2>Available Chat Rooms</h2>
        <ul class-"list-group">
            @foreach (var room in new List<string> { "Literature", "Programming", "Sports" })
            {
                <li class-"list-group-item"><a href="#"> @room </a></li>
            }
        </ul>
    </div>
</div>